<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="Explorar.."
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#5d4037"
        android:textSize="36sp" />

            <ImageView
                android:id="@+id/entradas"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/entradas" />

            <ImageButton
                android:id="@+id/btnentradas"
                style="@android:style/DeviceDefault.Light.ButtonBar"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-200dp"
                android:alpha=".6"
                app:srcCompat="?android:attr/colorForeground" />

            <TextView
                android:id="@+id/txtentradas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-120dp"
                android:text="Entradas"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/platofuerte"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/comida" />

            <ImageButton
                android:id="@+id/btnplatofuerte"
                style="@android:style/DeviceDefault.Light.ButtonBar"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-200dp"
                android:alpha=".6"
                app:srcCompat="?android:attr/colorForeground" />
            <TextView
                android:id="@+id/txtplatofuerte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-120dp"
                android:text="Plato fuerte"
                android:textColor="@android:color/white"
                android:textSize="24sp" />


            <ImageView
                android:id="@+id/bebidas"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/bebidas" />

            <ImageButton
                android:id="@+id/btnbebidas"
                style="@android:style/DeviceDefault.Light.ButtonBar"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-200dp"
                android:alpha=".6"
                app:srcCompat="?android:attr/colorForeground" />

            <TextView
                android:id="@+id/txtbebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-120dp"
                android:text="Bebidas"
                android:textColor="@android:color/white"
                android:textSize="24sp" />


            <ImageView
                android:id="@+id/crepas"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/crepas" />

            <ImageButton
                android:id="@+id/btncrepas"
                style="@android:style/DeviceDefault.Light.ButtonBar"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginTop="-200dp"
                android:alpha=".6"
                app:srcCompat="?android:attr/colorForeground" />

            <TextView
                android:id="@+id/txtpostre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-120dp"
                android:text="Postres"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/VerCarro"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/carro" />

            <ImageButton
                android:id="@+id/btncarrito"
                android:layout_width="780dp"
                android:layout_height="200dp"
                style="@android:style/DeviceDefault.Light.ButtonBar"
                android:layout_marginTop="-200dp"
                android:alpha=".4"
                app:srcCompat="?android:attr/colorForeground"
                />

            <ImageView
                android:id="@+id/Verpedido"
                android:layout_width="780dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/pedido" />

            <ImageButton
                android:id="@+id/btnpedido"
                android:layout_width="780dp"
                android:layout_height="200dp"
                style="@android:style/DeviceDefault.Light.ButtonBar"
                android:layout_marginTop="-200dp"
                android:alpha=".4"
                app:srcCompat="?android:attr/colorForeground"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>