<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".cliente.platillos.platofuerte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bebidas"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#5d4037"
            android:textSize="30sp"
            android:textStyle="bold"
            android:verticalScrollbarPosition="right"
            app:fontFamily="casual" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btnsmoothies"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/smoothies" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btnsodaitaliana"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/sodaitaliana" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btncocteles"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cocteles" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btncafe"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cafe" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btncapu"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/capu" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />
        <ImageButton
            android:id="@+id/btncho"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/choco" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btnlate"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/late" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btnchai"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/chai" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />

        <ImageButton
            android:id="@+id/btnotros"
            style="@android:style/DeviceDefault.Light.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/refcer" />
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/linea" />


    </LinearLayout>
</ScrollView>