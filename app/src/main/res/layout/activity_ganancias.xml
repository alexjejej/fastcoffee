<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:verticalScrollbarPosition="defaultPosition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Ventas"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#5d4037"
            android:textSize="30sp"
            android:textStyle="bold"
            android:verticalScrollbarPosition="right"
            app:fontFamily="casual" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linea" />

    <TextView
        android:id="@+id/txtganancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ver gráfica por día o mes"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:fontFamily="casual" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Ver por día: Seleccionar día, mes y año"
            android:layout_below="@+id/txtganancia"
            android:textColor="@android:color/background_dark"
            android:textSize="12dp"
            app:fontFamily="casual" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Ver por mes: Seleccionar mes y año"
            android:layout_below="@+id/txtganancia"
            android:textColor="@android:color/background_dark"
            android:textSize="12dp"
            app:fontFamily="casual" />

    <TextView
        android:id="@+id/txtganancia1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="día"
        android:layout_below="@+id/txtganancia"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        app:fontFamily="casual" />

    <Spinner
        android:id="@+id/spinnerdia"
        android:layout_width="100dp"
        android:layout_below="@+id/txtganancia1"
        android:layout_height="wrap_content"
        android:entries="@array/dia" />

    <TextView
        android:id="@+id/txtganancia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtganancia1"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="mes"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        app:fontFamily="casual" />

    <Spinner
        android:id="@+id/spinnermes"
        android:layout_width="200dp"
        android:layout_below="@+id/txtganancia2"
        android:layout_height="wrap_content"
        android:entries="@array/mes" />
    <TextView
        android:id="@+id/txtganancia3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="año"
        android:layout_below="@+id/txtganancia2"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        app:fontFamily="casual" />

    <Spinner
        android:id="@+id/spinnerano"
        android:layout_width="100dp"
        android:layout_below="@+id/txtganancia3"
        android:layout_height="wrap_content"
        android:entries="@array/año" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/spinnerano"
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
    android:gravity="center">

    <Button
        android:id="@+id/btndia"
        android:text="Ver por día"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/spinnerano"
        android:textColor="#ffffff"
        android:background="@drawable/bk_boton_plano"
         />
    <Button
        android:id="@+id/btnmes"
        android:text="Ver por mes"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinnerano"
        android:textColor="#ffffff"
        android:background="@drawable/bk_boton_plano"
        />
</LinearLayout>
    </LinearLayout>

</RelativeLayout>




